rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile images - users can only access their own
    match /user_profiles/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Damage report images - owners can access their own, professionals can read pending reports
    match /damage_reports/{ownerId}/{reportId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == ownerId;
    }
    
    // Estimate images - professionals can access their own estimates
    match /estimates/{reportId}/{estimateId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.metadata.ownerId || 
         request.auth.uid == resource.metadata.professionalId);
    }
    
    // General rule for other authenticated users
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
