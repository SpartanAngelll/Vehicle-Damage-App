rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is owner of resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is participant in chat
    function isChatParticipant(roomData) {
      return isAuthenticated() && (
        request.auth.uid == roomData.customerId || 
        request.auth.uid == roomData.professionalId
      );
    }
    
    // Chat rooms collection
    match /chatRooms/{roomId} {
      allow read: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.professionalId == request.auth.uid
      );
      allow create: if isAuthenticated() && (
        request.resource.data.customerId == request.auth.uid ||
        request.resource.data.professionalId == request.auth.uid
      );
      allow update: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.professionalId == request.auth.uid
      );
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated() && (
          get(/databases/$(database)/documents/chatRooms/$(roomId)).data.customerId == request.auth.uid ||
          get(/databases/$(database)/documents/chatRooms/$(roomId)).data.professionalId == request.auth.uid
        );
        allow create: if isAuthenticated() && 
          request.resource.data.senderId == request.auth.uid &&
          (
            get(/databases/$(database)/documents/chatRooms/$(roomId)).data.customerId == request.auth.uid ||
            get(/databases/$(database)/documents/chatRooms/$(roomId)).data.professionalId == request.auth.uid
          );
        allow update: if isAuthenticated() && 
          resource.data.senderId == request.auth.uid;
        allow delete: if false;
      }
    }
    
    // User profiles collection (optional, if storing in Firestore)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.firebaseUid == request.auth.uid;
      allow update: if isOwner(userId);
      allow delete: if false;
    }
    
    // Bookings collection (optional metadata, main data in Supabase)
    match /bookings/{bookingId} {
      allow read: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.professionalId == request.auth.uid
      );
      allow create: if isAuthenticated() && 
        request.resource.data.customerId == request.auth.uid;
      allow update: if isAuthenticated() && (
        resource.data.customerId == request.auth.uid ||
        resource.data.professionalId == request.auth.uid
      );
      allow delete: if false;
    }
    
    // Job requests collection (optional metadata)
    match /jobRequests/{requestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.customerId == request.auth.uid;
      allow update: if isAuthenticated() && 
        resource.data.customerId == request.auth.uid;
      allow delete: if isAuthenticated() && 
        resource.data.customerId == request.auth.uid;
    }
    
    // Estimates collection (optional metadata)
    match /estimates/{estimateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.professionalId == request.auth.uid;
      allow update: if isAuthenticated() && 
        resource.data.professionalId == request.auth.uid;
      allow delete: if false;
    }
  }
}

