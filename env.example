# =============================================================================
# VEHICLE DAMAGE APP - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env to version control - it's already in .gitignore
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase Project URL
# Get from: Supabase Dashboard > Settings > API > Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (for client-side operations)
# Get from: Supabase Dashboard > Settings > API > Project API keys > anon public
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for server-side/admin operations)
# Get from: Supabase Dashboard > Settings > API > Project API keys > service_role
# WARNING: Keep this secret! Never expose in client-side code.
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# POSTGRESQL/SUPABASE DATABASE CONFIGURATION
# =============================================================================
# Database connection details (Supabase uses PostgreSQL)
# Get from: Supabase Dashboard > Settings > Database > Connection string
POSTGRES_HOST=db.your-project-id.supabase.co
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_supabase_password_here
POSTGRES_DB=postgres

# SSL Configuration (required for Supabase)
POSTGRES_SSL=true
POSTGRES_SSL_REJECT_UNAUTHORIZED=true

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Firebase Project ID
FIREBASE_PROJECT_ID=vehicle-damage-app

# Firebase API Keys (for reference - actual keys are in lib/firebase_options.dart)
# Web API Key
FIREBASE_WEB_API_KEY=your_firebase_web_api_key_here

# Android API Key
FIREBASE_ANDROID_API_KEY=your_firebase_android_api_key_here

# iOS API Key
FIREBASE_IOS_API_KEY=your_firebase_ios_api_key_here

# Firebase Messaging Sender ID
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here

# Firebase App IDs
FIREBASE_WEB_APP_ID=your_firebase_web_app_id_here
FIREBASE_ANDROID_APP_ID=your_firebase_android_app_id_here
FIREBASE_IOS_APP_ID=your_firebase_ios_app_id_here

# =============================================================================
# API KEYS
# =============================================================================
# Google Maps API Key
# Get from: Google Cloud Console > APIs & Services > Credentials
# Enable APIs: Maps JavaScript API, Geocoding API, Places API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
# WARNING: Keep this secret! Never expose in client-side code.
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# EMAIL SERVICE (SENDGRID)
# =============================================================================
# SendGrid API Key (for Firebase Functions email sending)
# Get from: SendGrid Dashboard > Settings > API Keys
# WARNING: Keep this secret! Only used in Firebase Functions.
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SendGrid Configuration
SENDGRID_FROM_EMAIL=noreply@vehicledamageapp.com
SENDGRID_FROM_NAME=Vehicle Damage App

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend server port (default: 3000)
PORT=3000

# Backend server host (default: 0.0.0.0)
HOST=0.0.0.0

# =============================================================================
# PAYMENT PROCESSOR (if using)
# =============================================================================
# Payment processor API key (e.g., Stripe, PayPal)
# WARNING: Keep this secret! Never expose in client-side code.
PAYMENT_PROCESSOR_API_KEY=your_payment_processor_api_key_here
