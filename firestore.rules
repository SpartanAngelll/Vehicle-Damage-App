rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Damage report owners can read/write their reports, professionals can read pending reports
    match /damage_reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (resource == null || resource.data.ownerId == request.auth.uid);
    }
    
    // Estimates - professionals can update their own estimates, owners can update estimates for their reports
    match /estimates/{estimateId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        // Professionals can update their own estimates
        resource.data.professionalId == request.auth.uid ||
        // Vehicle owners can update estimates for their damage reports
        resource.data.ownerId == request.auth.uid
      );
    }
  }
}
